{
  "name": "Marq",
  "uid": "marq-app",
  "description": "Marq is a HubSpot extension designed to streamline the creation of personalized sales proposals, presentations, and content. Seamlessly pull data from HubSpot CRM records into customizable templates, making your sales process faster",
  "allowedUrls": ["https://api.hubapi.com", "https://marqembed.fastgenapp.com"],
  "logo": "./Marq_Q_Logo.png",
  "advancedScopeSettingsEnabled": true,
  "auth": {
    "redirectUrls": ["http://localhost:3001/oauth-callback"],
    "requiredScopes": [
      "crm.objects.contacts.read",
      "crm.objects.contacts.write",
      "crm.objects.companies.read",
      "crm.objects.companies.write",
      "crm.objects.deals.read",
      "crm.objects.deals.write",
      "crm.objects.quotes.read",
      "crm.objects.quotes.write",
      "crm.objects.line_items.read",
      "crm.objects.line_items.write",
      "crm.objects.users.read",
      "crm.objects.users.write",
      "crm.schemas.contacts.read",
      "crm.schemas.contacts.write",
      "crm.schemas.companies.read",
      "crm.schemas.companies.write",
      "crm.schemas.deals.read",
      "crm.schemas.deals.write",
      "crm.schemas.quotes.read",
      "crm.schemas.quotes.write",
      "crm.schemas.line_items.read",
      "crm.schemas.line_items.write",
      "crm.objects.custom.read",
      "crm.objects.custom.write",
      "crm.schemas.custom.read",
      "crm.schemas.custom.write",
      "hubdb"
    ],
    "optionalScopes": [],
    "conditionallyRequiredScopes": []
  },
  "support": {
    "supportEmail": "support@marq.com",
    "documentationUrl": "https://example.com/docs",
    "supportUrl": "https://example.com/support",
    "supportPhone": "+18005555555"
  },
  "extensions": {
    "crm": {
      "cards": [
        {
          "file": "./extensions/example-card.json"
        }
      ]
    }
  },
  "webhooks": {
    "file": "./webhooks/webhooks.json"
  }
}
